extends layout/layout
include mixins/placeholders
block content
    #preload
      img(src='images/bcg_slide-1.jpg')
      img(src='images/bcg_slide-2.jpg')
      img(src='images/bcg_slide-3.jpg')
      img(src='images/bcg_slide-4.jpg')
    main
      //Section 1
      section#slide-1.homeSlide
        .bcg(data-center='background-position:50% 0px', data-top-bottom='background-position: 50% -100px;', data-anchor-target='#slide-1')
          .hsContainer
            .hsContent(data-center='bottom: 200px; opacity: 1', data-top='bottom: 1200px; opacity: 0', data-anchor-target='#slide-1 h2')
              h2 Simple parallax scrolling is ...
      //Section 2
      section#slide-2.homeSlide
        .bcg(data-center='background-position: 50% 0px;', data-top-bottom='background-position: 50% -100px;', data-bottom-top='background-position: 50% 100px;', data-anchor-target='#slide-2')
          .hsContainer
            .hsContent(data-center='opacity: 1', data-bottom-top='opacity: 0', data--100-bottom='opacity: 0;', data-anchor-target='#slide-2')
              h2 great for story telling websites.
      //Section 3
      section#slide-3.homeSlide
        .bcg(data-center='background-position: 50% 0px;', data-top-bottom='background-position: 50% -100px;', data-bottom-top='background-position: 50% 100px;', data-anchor-target='#slide-3')
          .hsContainer
            .hsContent(data--50-bottom='opacity: 0;', data--200-bottom='opacity: 1;', data-center='opacity: 1', data-200-top='opacity: 0', data-anchor-target='#slide-3 h2')
              h2 Now go and create your own story
      //Section 4
      section#slide-4.homeSlide
        .bcg(data-center='background-position: 50% 0px;', data-top-bottom='background-position: 50% -100px;', data-bottom-top='background-position: 50% 100px;', data-anchor-target='#slide-4')
          .hsContainer
            .hsContent(data-bottom-top='opacity: 0', data-25p-top='opacity: 0', data-top='opacity: 1', data-anchor-target='#slide-4')
              h2 and share mine.
